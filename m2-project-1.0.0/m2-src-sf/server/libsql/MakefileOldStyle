CC = clang++-devel

LIBS =
FLAGS =
INCDIR =
LIBDIR =
BINDIR = ..
OBJDIR = OBJDIR
OUTPUT = ../../data/lib

TARGET_NAME = libsql.a
TARGET = $(OUTPUT)/$(TARGET_NAME)

INCDIR += -I../../data/mysql_5_1_35

# FLAGS += -g
FLAGS += -w
FLAGS += -Wall
FLAGS += -O2
# FLAGS += -m32
FLAGS += -pipe
# FLAGS += -fexceptions
FLAGS += -D_GLIBCXX_USE_CXX11_ABI=1
FLAGS += -fno-exceptions
FLAGS += -D_THREAD_SAFE
# FLAGS += -mcpu=i686
FLAGS += -march=native
# FLAGS += -DNDEBUG
# FLAGS += -fstack-protector-all
# FLAGS += -std=c++11

OBJFILES = AsyncSQL.o Semaphore.o Tellwait.o Statement.o

default:
	@echo -e ""
	@echo -e "\033[0;36m ■\033[0m gmake clean \033[0;36m■\033[0m gmake depend \033[0;36m■\033[0m gmake lib \033[0;36m■\033[0m"
	@echo -e ""

lib:
	@$(MAKE) $(TARGET)

$(TARGET): $(OBJFILES)
	@echo -e "\033[0;32m ■\033[0m Generating \033[0;32m:\033[0m" $(TARGET_NAME)
	@ar cru $(TARGET) $(OBJFILES) $(LIBS)
	@ranlib $(TARGET)
	@chmod 700 $(TARGET)

clean:
	@echo -e "\033[0;33m ■\033[0m M2P \033[0;33m:\033[0m Cleaning" $<
	@rm -f *.o $(TARGET)

depend:
	@echo -e "\033[0;33m ■\033[0m M2P \033[0;33m:\033[0m Depending" $<
	@touch Depend
	@$(CC) $(FLAGS) $(INCDIR) -MM *.cpp > Depend

$(OBJFILES):
	@echo -e "\033[0;36m ■\033[0m Compiling \033[0;36m:\033[0m" $<
	@$(CC) $(FLAGS) $(INCDIR) -c $<

sinclude Depend
